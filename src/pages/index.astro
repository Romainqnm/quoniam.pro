---
import { ViewTransitions } from 'astro:transitions';
import hubLogo from '../assets/logo.png';
import audioIcon from '../assets/icone_audio.png';
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>QUONIAM | Hub</title>
    <ViewTransitions />
    <style>
      :root {
        --void-1: #06030f;
        --void-2: #150d36;
        --void-3: #081a37;
        --nova-violet: #9f4dff;
        --nova-blue: #3ea2ff;
        --gold: #d4af37;
        --orch-amber: #ffb347;
        --orch-champagne: #ffe7b6;
        --glass-bg: linear-gradient(150deg, rgba(255, 255, 255, 0.18), rgba(255, 255, 255, 0.03) 45%, rgba(255, 255, 255, 0.01));
        --glass-edge: rgba(188, 216, 255, 0.28);
        --glass-shadow: 0 24px 52px rgba(0, 0, 0, 0.5), 0 0 72px rgba(112, 52, 231, 0.24);
        --glass-glow: linear-gradient(95deg, rgba(255, 255, 255, 0.22), rgba(255, 255, 255, 0));
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: 'Segoe UI', system-ui, sans-serif;
        background: linear-gradient(128deg, var(--void-1), var(--void-2) 45%, var(--void-3));
        color: white;
        min-height: 100vh;
        overflow-x: hidden;
      }

      .liquid-glass {
        position: relative;
        background: var(--glass-bg);
        border: 1px solid var(--glass-edge);
        box-shadow: var(--glass-shadow);
        backdrop-filter: blur(16px) saturate(120%);
        -webkit-backdrop-filter: blur(16px) saturate(120%);
      }

      .liquid-glass::before {
        content: "";
        position: absolute;
        inset: 0;
        background: var(--glass-glow);
        opacity: 0.42;
        pointer-events: none;
      }

      .liquid-glass::after {
        content: "";
        position: absolute;
        inset: 1px;
        border-radius: inherit;
        border: 1px solid rgba(255, 255, 255, 0.14);
        pointer-events: none;
      }

      :root {
        view-transition-name: root;
      }

      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 620ms;
        animation-timing-function: cubic-bezier(0.2, 0.86, 0.22, 1);
      }

      body::before,
      body::after {
        content: "";
        position: fixed;
        inset: -20%;
        pointer-events: none;
        z-index: 0;
      }

      body::before {
        background:
          radial-gradient(30rem 30rem at 16% 22%, rgba(159, 77, 255, 0.45), transparent 68%),
          radial-gradient(30rem 30rem at 82% 72%, rgba(62, 162, 255, 0.42), transparent 70%),
          radial-gradient(24rem 24rem at 50% 42%, rgba(126, 47, 253, 0.22), transparent 72%);
        filter: blur(12px);
        animation: nebulaShift 16s ease-in-out infinite alternate;
      }

      body::after {
        background-image:
          radial-gradient(2px 2px at 10% 18%, rgba(255, 255, 255, 0.7), transparent),
          radial-gradient(2px 2px at 74% 12%, rgba(255, 255, 255, 0.6), transparent),
          radial-gradient(1px 1px at 28% 72%, rgba(159, 77, 255, 0.9), transparent),
          radial-gradient(2px 2px at 62% 86%, rgba(62, 162, 255, 0.85), transparent),
          radial-gradient(1px 1px at 86% 52%, rgba(255, 255, 255, 0.65), transparent),
          linear-gradient(rgba(130, 180, 255, 0.05) 1px, transparent 1px),
          linear-gradient(90deg, rgba(159, 77, 255, 0.06) 1px, transparent 1px);
        background-size: auto, auto, auto, auto, auto, 38px 38px, 38px 38px;
        mix-blend-mode: screen;
        opacity: 0.7;
        animation: starDrift 22s linear infinite;
      }

      .side-waves {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        overflow: hidden;
      }

      .side-waves-group {
        position: absolute;
        top: -8%;
        bottom: -8%;
        width: min(46vw, 700px);
        opacity: 0.82;
      }

      .side-waves-group.left {
        left: -7%;
        transform: rotate(-6deg);
      }

      .side-waves-group.right {
        right: -7%;
        transform: rotate(6deg);
      }

      .flow-line {
        position: absolute;
        left: 0;
        right: 0;
        height: clamp(7px, 0.8vw, 11px);
        border-radius: 999px;
        opacity: 0.84;
        background:
          linear-gradient(90deg, transparent 0%, transparent 6%, var(--line-a) 16%, var(--line-b) 46%, var(--line-a) 72%, transparent 92%, transparent 100%);
        box-shadow: 0 0 0 1px rgba(220, 238, 255, 0.16) inset;
        -webkit-mask-image: linear-gradient(90deg, transparent 0%, #000 12%, #000 88%, transparent 100%);
        mask-image: linear-gradient(90deg, transparent 0%, #000 12%, #000 88%, transparent 100%);
        animation:
          lineFlow var(--dur) cubic-bezier(0.45, 0.08, 0.23, 1) infinite,
          lineTwist calc(var(--dur) * 0.58) ease-in-out infinite,
          lineOpacity calc(var(--dur) * 0.41) ease-in-out infinite;
        animation-delay: var(--delay), calc(var(--delay) * 0.45), calc(var(--delay) * 0.72);
      }

      .side-waves-group.left .flow-line:nth-child(1) {
        top: 14%;
        --line-a: rgba(99, 214, 255, 0.95);
        --line-b: rgba(176, 107, 255, 0.95);
        --dur: 10.8s;
        --delay: -1.8s;
        --amp-x: 22px;
        --amp-y: 16px;
        --tilt: -7deg;
      }

      .side-waves-group.left .flow-line:nth-child(2) {
        top: 34%;
        --line-a: rgba(184, 112, 255, 0.95);
        --line-b: rgba(108, 197, 255, 0.95);
        --dur: 12.6s;
        --delay: -4.4s;
        --amp-x: 28px;
        --amp-y: 20px;
        --tilt: -3deg;
      }

      .side-waves-group.left .flow-line:nth-child(3) {
        top: 56%;
        --line-a: rgba(96, 211, 255, 0.93);
        --line-b: rgba(198, 126, 255, 0.93);
        --dur: 11.4s;
        --delay: -2.8s;
        --amp-x: 20px;
        --amp-y: 18px;
        --tilt: -8deg;
      }

      .side-waves-group.left .flow-line:nth-child(4) {
        top: 78%;
        --line-a: rgba(171, 100, 255, 0.92);
        --line-b: rgba(98, 214, 255, 0.92);
        --dur: 13.2s;
        --delay: -6.2s;
        --amp-x: 26px;
        --amp-y: 14px;
        --tilt: -4deg;
      }

      .side-waves-group.right .flow-line:nth-child(1) {
        top: 18%;
        --line-a: rgba(186, 114, 255, 0.95);
        --line-b: rgba(101, 214, 255, 0.95);
        --dur: 11.1s;
        --delay: -3.1s;
        --amp-x: 24px;
        --amp-y: 15px;
        --tilt: 6deg;
      }

      .side-waves-group.right .flow-line:nth-child(2) {
        top: 38%;
        --line-a: rgba(102, 213, 255, 0.95);
        --line-b: rgba(187, 115, 255, 0.95);
        --dur: 12.9s;
        --delay: -5.6s;
        --amp-x: 30px;
        --amp-y: 19px;
        --tilt: 4deg;
      }

      .side-waves-group.right .flow-line:nth-child(3) {
        top: 60%;
        --line-a: rgba(183, 111, 255, 0.93);
        --line-b: rgba(112, 200, 255, 0.93);
        --dur: 10.6s;
        --delay: -2.1s;
        --amp-x: 20px;
        --amp-y: 17px;
        --tilt: 8deg;
      }

      .side-waves-group.right .flow-line:nth-child(4) {
        top: 80%;
        --line-a: rgba(99, 210, 255, 0.92);
        --line-b: rgba(177, 105, 255, 0.92);
        --dur: 13.4s;
        --delay: -7s;
        --amp-x: 27px;
        --amp-y: 13px;
        --tilt: 3deg;
      }

      header,
      main {
        position: relative;
        z-index: 1;
      }

      header {
        text-align: center;
        padding: 30px 20px 14px;
      }

      .hero-brand {
        width: min(980px, 92vw);
        margin: 0 auto;
        position: relative;
        border-radius: 24px;
        padding: 28px 20px 18px;
      }

      .hero-brand::after {
        content: "";
        position: absolute;
        inset: auto 8% -26px;
        height: 60px;
        background: radial-gradient(circle, rgba(136, 85, 255, 0.36), rgba(66, 155, 255, 0));
        filter: blur(22px);
        pointer-events: none;
      }

      .hero-brand-bg {
        position: absolute;
        inset: 0;
        border-radius: 24px;
        overflow: hidden;
        pointer-events: none;
      }

      .hero-brand-bg::before,
      .hero-brand-bg::after {
        content: "";
        position: absolute;
        inset: 0;
      }

      .hero-brand-bg::before {
        background:
          radial-gradient(110% 120% at 20% 10%, rgba(74, 196, 255, 0.22), transparent 56%),
          radial-gradient(95% 95% at 84% 12%, rgba(183, 92, 255, 0.26), transparent 58%),
          linear-gradient(120deg, rgba(7, 16, 34, 0.92), rgba(22, 17, 47, 0.9) 45%, rgba(10, 25, 47, 0.92));
      }

      .hero-brand-bg::after {
        background:
          radial-gradient(80% 60% at 16% 35%, rgba(94, 189, 255, 0.18), transparent 68%),
          radial-gradient(70% 65% at 84% 65%, rgba(188, 114, 255, 0.2), transparent 70%),
          linear-gradient(90deg, rgba(86, 170, 255, 0.08), rgba(188, 112, 255, 0.1));
        opacity: 0.64;
      }

      .hero-brand-content {
        position: relative;
        z-index: 1;
      }

      .brand-signature {
        margin: -24px auto 0;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 10px 18px;
        border-radius: 14px;
        border: 1px solid rgba(185, 209, 255, 0.28);
        background: linear-gradient(140deg, rgba(16, 21, 50, 0.82), rgba(38, 18, 84, 0.72));
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 26px rgba(0, 0, 0, 0.45), 0 0 28px rgba(136, 75, 255, 0.26);
        position: relative;
        z-index: 1;
      }

      .logo {
        font-size: clamp(2rem, 4vw, 2.7rem);
        letter-spacing: 9px;
        font-weight: 800;
        margin: 0;
        background: linear-gradient(90deg, #d6c8ff, #9f4dff 35%, #63b1ff 65%, #decdff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 18px rgba(158, 74, 255, 0.35);
        position: relative;
      }

      .logo::after {
        content: "QUONIAM";
        position: absolute;
        inset: 0;
        color: rgba(130, 210, 255, 0.34);
        filter: blur(2px);
        transform: translate(1px, 1px) skewX(-6deg);
        mix-blend-mode: screen;
        pointer-events: none;
      }

      .logo-mark {
        width: clamp(48px, 5vw, 64px);
        height: auto;
        filter: drop-shadow(0 0 12px rgba(159, 77, 255, 0.45));
      }

      .hub-tagline {
        margin: 14px auto 0;
        max-width: 680px;
        color: rgba(222, 231, 255, 0.78);
        font-size: 1.02rem;
        padding-inline: 12px;
      }

      main {
        padding: 34px 44px;
      }

      .product-link {
        display: block;
        text-decoration: none;
        color: inherit;
        min-width: 0;
        height: 100%;
      }

      .portal-link {
        display: block;
        text-decoration: none;
        color: inherit;
        min-width: 0;
        height: 100%;
      }

      .product-showcase {
        view-transition-name: audio-card;
        position: relative;
        overflow: hidden;
        isolation: isolate;
        max-width: none;
        margin: 0;
        aspect-ratio: 16 / 10;
        min-height: 390px;
        height: auto;
        padding: 22px 22px 142px;
        display: flex;
        flex-direction: column;
        border-radius: 24px;
        background:
          linear-gradient(145deg, rgba(255, 255, 255, 0.11), rgba(255, 255, 255, 0.02) 62%),
          linear-gradient(120deg, rgba(9, 9, 24, 0.72), rgba(19, 31, 66, 0.52));
        backdrop-filter: blur(14px);
        border: 1px solid rgba(153, 190, 255, 0.26);
        border-left: 4px solid var(--gold);
        box-shadow:
          0 24px 48px rgba(0, 0, 0, 0.55),
          0 0 60px rgba(88, 32, 182, 0.22),
          inset 0 0 26px rgba(255, 255, 255, 0.05);
        transition: transform 0.5s cubic-bezier(0.2, 0.85, 0.2, 1), box-shadow 0.5s ease;
      }

      .product-showcase > * {
        position: relative;
        z-index: 1;
      }

      .product-showcase::before {
        content: "";
        position: absolute;
        inset: -120% -40% auto;
        height: 220%;
        transform: rotate(12deg);
        background: linear-gradient(90deg, transparent 30%, rgba(165, 98, 255, 0.4) 48%, transparent 70%);
        animation: cardFlux 6.5s linear infinite;
        pointer-events: none;
      }

      .product-showcase h1,
      .portal-title {
        font-size: clamp(2rem, 2.2vw, 2.45rem);
        font-weight: 700;
        margin-top: 0;
        margin-bottom: 12px;
        line-height: 1.08;
      }

      .product-showcase h1 {
        view-transition-name: audio-title;
      }

      .product-heading {
        min-height: 86px;
      }

      .product-showcase h1 {
        background: linear-gradient(52deg, #fff2ae, #d4af37 38%, #ffd65f 55%, #a77a00 85%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 25px rgba(212, 175, 55, 0.15);
      }

      .product-heading {
        display: inline-flex;
        align-items: center;
        gap: 14px;
      }

      .audio-icon {
        width: clamp(36px, 4.4vw, 56px);
        height: auto;
        flex-shrink: 0;
        filter: drop-shadow(0 0 10px rgba(255, 188, 93, 0.42));
        view-transition-name: audio-emblem;
      }

      .subtitle {
        color: #d5ddfa;
        font-size: 1.02rem;
        line-height: 1.6;
        max-width: 100%;
        margin: 0;
        min-height: 84px;
      }

      .cta-dimension {
        margin-top: 14px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: #ffe291;
        font-weight: 600;
        letter-spacing: 0.5px;
        padding: 9px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255, 221, 151, 0.34);
        background: linear-gradient(120deg, rgba(255, 205, 112, 0.2), rgba(255, 255, 255, 0.06));
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.24), 0 8px 18px rgba(0, 0, 0, 0.3);
      }

      .portal-cta {
        --portal-cta-text: #f2e8ff;
        --portal-cta-border: rgba(200, 180, 255, 0.36);
        --portal-cta-bg: linear-gradient(120deg, rgba(182, 136, 255, 0.22), rgba(255, 255, 255, 0.08));
        margin-top: 14px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: var(--portal-cta-text);
        font-weight: 600;
        letter-spacing: 0.4px;
        padding: 9px 14px;
        border-radius: 999px;
        border: 1px solid var(--portal-cta-border);
        background: var(--portal-cta-bg);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.24), 0 8px 18px rgba(0, 0, 0, 0.3);
      }

      .cta-dimension::after {
        content: "→";
        transform: translateX(0);
        transition: transform 0.3s ease;
      }

      .portal-cta::after {
        content: "→";
        transform: translateX(0);
        transition: transform 0.3s ease;
      }

      .product-link:hover .product-showcase,
      .product-link:focus-visible .product-showcase {
        transform: perspective(1100px) rotateX(2deg) rotateY(-1.5deg) translateY(-8px) scale(1.01);
        box-shadow:
          0 28px 54px rgba(0, 0, 0, 0.58),
          0 0 90px rgba(117, 43, 238, 0.36),
          0 0 46px rgba(62, 162, 255, 0.2);
      }

      .product-link:hover .cta-dimension,
      .product-link:focus-visible .cta-dimension {
        background: linear-gradient(120deg, rgba(255, 205, 112, 0.3), rgba(255, 255, 255, 0.12));
      }

      .portal-link:hover .portal-cta,
      .portal-link:focus-visible .portal-cta {
        filter: brightness(1.08);
      }

      .product-link:hover .cta-dimension::after,
      .product-link:focus-visible .cta-dimension::after {
        transform: translateX(6px);
      }

      .portal-link:hover .portal-cta::after,
      .portal-link:focus-visible .portal-cta::after {
        transform: translateX(6px);
      }

      .audio-wave-deco {
        view-transition-name: audio-wave;
        position: absolute;
        right: 6%;
        bottom: 14px;
        width: 64%;
        aspect-ratio: 1.8 / 1;
        pointer-events: none;
        z-index: 0;
        opacity: 0.96;
      }

      .audio-wave-deco::before {
        content: "";
        position: absolute;
        inset: 10% 2% 5%;
        background: radial-gradient(circle at 42% 62%, rgba(255, 179, 71, 0.42), rgba(212, 175, 55, 0) 65%);
        filter: blur(20px);
      }

      .audio-wave-deco::after {
        content: "";
        position: absolute;
        inset: 42% 8% 6%;
        background: linear-gradient(180deg, rgba(255, 218, 149, 0.22), rgba(255, 179, 71, 0));
        filter: blur(10px);
      }

      .wave-lines {
        position: absolute;
        inset: 20% 8% 8% 36%;
        overflow: hidden;
      }

      .wave-lines span {
        position: absolute;
        left: 0;
        width: 100%;
        height: 42%;
        border-top: 2px solid rgba(255, 228, 171, 0.68);
        border-radius: 50% 50% 0 0 / 100% 100% 0 0;
        transform-origin: left center;
        animation: sonicSweep 3.2s ease-in-out infinite;
        filter: drop-shadow(0 0 8px rgba(255, 191, 88, 0.4));
      }

      .wave-lines span:nth-child(1) {
        top: 8%;
        opacity: 0.88;
        animation-delay: -0.4s;
      }

      .wave-lines span:nth-child(2) {
        top: 28%;
        opacity: 0.72;
        border-top-color: rgba(255, 179, 71, 0.7);
        animation-delay: -1.1s;
      }

      .wave-lines span:nth-child(3) {
        top: 48%;
        opacity: 0.58;
        border-top-color: rgba(212, 175, 55, 0.62);
        animation-delay: -1.8s;
      }

      .wave-core {
        position: absolute;
        left: 10%;
        bottom: 20%;
        width: 36%;
        aspect-ratio: 1;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(255, 201, 106, 0.34), rgba(212, 175, 55, 0.05) 62%, transparent 70%);
        filter: blur(1px);
      }

      .wave-rings {
        position: absolute;
        left: 2%;
        bottom: 2%;
        width: 52%;
        aspect-ratio: 1;
      }

      .wave-rings span {
        position: absolute;
        inset: 0;
        border-radius: 50%;
        border: 1px solid rgba(255, 189, 82, 0.56);
        transform: scale(0.2);
        opacity: 0;
        animation: ringPulse 2.4s cubic-bezier(0.16, 1, 0.3, 1) infinite;
      }

      .wave-rings span:nth-child(2) {
        animation-delay: 0.9s;
      }

      .wave-rings span:nth-child(3) {
        animation-delay: 1.8s;
      }

      .wave-bars {
        position: absolute;
        right: 7%;
        bottom: 10%;
        display: flex;
        align-items: flex-end;
        gap: clamp(4px, 0.6vw, 8px);
        height: 62%;
        width: 34%;
      }

      .wave-bars span {
        flex: 1;
        min-width: 5px;
        height: var(--h, 26%);
        border-radius: 999px;
        background: linear-gradient(180deg, var(--orch-champagne), var(--orch-amber) 55%, rgba(212, 175, 55, 0.24));
        box-shadow: 0 0 14px rgba(255, 187, 74, 0.52);
        transform-origin: 50% 100%;
        animation: barDance calc(0.9s + (var(--i) * 0.07s)) ease-in-out infinite;
        animation-delay: calc(var(--i) * -0.11s);
      }

      .portal-grid {
        max-width: 1480px;
        margin: 20px auto 0;
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 34px;
        align-items: stretch;
      }

      .portal-card {
        --portal-accent: rgba(212, 175, 55, 0.9);
        --portal-glow: rgba(212, 175, 55, 0.22);
        position: relative;
        aspect-ratio: 16 / 10;
        min-height: 390px;
        border-radius: 24px;
        padding: 22px 22px 138px;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        isolation: isolate;
        border: 1px solid rgba(173, 201, 255, 0.24);
        border-left: 4px solid var(--portal-accent);
        background:
          linear-gradient(145deg, rgba(255, 255, 255, 0.11), rgba(255, 255, 255, 0.02) 62%),
          linear-gradient(120deg, rgba(9, 9, 24, 0.72), rgba(19, 31, 66, 0.52));
        transform-style: preserve-3d;
        transition: transform 0.55s cubic-bezier(0.2, 0.86, 0.22, 1), box-shadow 0.5s ease;
        box-shadow:
          0 24px 48px rgba(0, 0, 0, 0.52),
          0 0 54px var(--portal-glow),
          inset 0 0 24px rgba(255, 255, 255, 0.05);
      }

      .portal-card::before {
        content: "";
        position: absolute;
        inset: -120% -40% auto;
        height: 220%;
        transform: rotate(12deg);
        background: linear-gradient(90deg, transparent 30%, rgba(165, 98, 255, 0.32) 48%, transparent 70%);
        animation: cardFlux 6.6s linear infinite;
        pointer-events: none;
      }

      .portal-card::after {
        content: "";
        position: absolute;
        inset: 1px;
        border-radius: inherit;
        border: 1px solid rgba(255, 255, 255, 0.14);
        pointer-events: none;
      }

      .portal-card > * {
        position: relative;
        z-index: 1;
      }

      .portal-title {
        margin: 0;
        font-size: clamp(2rem, 2.2vw, 2.45rem);
        line-height: 1.08;
        min-height: 86px;
      }

      .portal-sub {
        margin: 8px 0 0;
        color: rgba(226, 236, 255, 0.86);
        line-height: 1.55;
        font-size: 1.02rem;
        min-height: 84px;
      }

      .portal-tag {
        margin-top: 14px;
        display: inline-flex;
        border-radius: 999px;
        padding: 8px 12px;
        font-size: 0.84rem;
        letter-spacing: 0.06em;
        border: 1px solid rgba(255, 255, 255, 0.24);
        background: rgba(255, 255, 255, 0.08);
      }

      .portal-card:hover {
        transform: perspective(1100px) rotateX(2deg) rotateY(-1.5deg) translateY(-8px) scale(1.01);
        box-shadow:
          0 28px 54px rgba(0, 0, 0, 0.58),
          0 0 86px color-mix(in srgb, var(--portal-accent) 45%, #5620b6 55%),
          0 0 42px rgba(62, 162, 255, 0.18);
      }

      .vision-portal {
        view-transition-name: vision-card;
        --portal-accent: rgba(255, 94, 205, 0.95);
        --portal-glow: rgba(191, 55, 255, 0.26);
        --portal-cta-text: #ffd9f9;
        --portal-cta-border: rgba(255, 126, 233, 0.42);
        --portal-cta-bg: linear-gradient(120deg, rgba(255, 86, 197, 0.25), rgba(85, 239, 255, 0.12));
        background:
          radial-gradient(140% 95% at 40% 120%, rgba(87, 255, 250, 0.16), transparent 62%),
          linear-gradient(130deg, rgba(17, 9, 41, 0.86), rgba(48, 12, 91, 0.74) 48%, rgba(15, 32, 82, 0.72));
      }

      .vision-portal .portal-title {
        background: linear-gradient(90deg, #ff56c5, #c14dff 45%, #55efff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .vision-tunnel {
        position: absolute;
        inset: auto 6% 6% 44%;
        width: 50%;
        aspect-ratio: 1;
      }

      .vision-tunnel span {
        position: absolute;
        inset: 0;
        border-radius: 50%;
        border: 2px solid rgba(235, 92, 255, 0.5);
        opacity: 0;
        transform: scale(0.2) translateZ(0);
        animation: visionTunnel 3.1s linear infinite;
        box-shadow: 0 0 12px rgba(96, 227, 255, 0.28);
      }

      .vision-tunnel span:nth-child(2) { animation-delay: 0.5s; }
      .vision-tunnel span:nth-child(3) { animation-delay: 1s; }
      .vision-tunnel span:nth-child(4) { animation-delay: 1.5s; }
      .vision-tunnel span:nth-child(5) { animation-delay: 2s; }

      .vision-lines {
        position: absolute;
        inset: auto 10% 18% 44%;
        height: 52px;
        background: repeating-linear-gradient(90deg, rgba(96, 227, 255, 0.7) 0 2px, transparent 2px 12px);
        mask-image: linear-gradient(90deg, transparent 0, #000 30%, #000 100%);
        opacity: 0.9;
        animation: visionDrift 3.6s linear infinite;
      }

      .vision-portal:hover .vision-tunnel span {
        animation-duration: 1.1s;
      }

      .vision-portal:hover .vision-lines {
        animation-duration: 1.2s;
        opacity: 0.98;
      }

      .prisma-portal {
        view-transition-name: prisma-card;
        --portal-accent: rgba(255, 249, 210, 0.95);
        --portal-glow: rgba(218, 245, 255, 0.28);
        --portal-cta-text: #f7fbff;
        --portal-cta-border: rgba(222, 243, 255, 0.46);
        --portal-cta-bg: linear-gradient(120deg, rgba(255, 255, 255, 0.24), rgba(132, 241, 255, 0.12));
        background:
          radial-gradient(120% 80% at 50% 120%, rgba(255, 255, 255, 0.22), transparent 70%),
          linear-gradient(130deg, rgba(245, 249, 255, 0.16), rgba(255, 255, 255, 0.04) 35%, rgba(178, 224, 255, 0.1) 65%, rgba(255, 182, 220, 0.1));
      }

      .prisma-portal .portal-title {
        color: #ffffff;
        text-shadow: 0 0 18px rgba(255, 255, 255, 0.52);
      }

      .prisma-beams {
        position: absolute;
        inset: 16% -8% 6% -8%;
        background:
          linear-gradient(102deg, rgba(255, 255, 255, 0.48), rgba(255, 255, 255, 0) 44%),
          linear-gradient(112deg, rgba(130, 228, 255, 0.26), rgba(255, 255, 255, 0) 48%),
          linear-gradient(122deg, rgba(255, 122, 232, 0.24), rgba(255, 255, 255, 0) 52%),
          linear-gradient(132deg, rgba(255, 247, 153, 0.22), rgba(255, 255, 255, 0) 56%);
        mix-blend-mode: screen;
        transform: translateX(-4%) rotate(-2deg);
        opacity: 0.76;
        animation: prismaSplit 4.2s linear infinite;
      }

      .prisma-shards {
        position: absolute;
        inset: 16% 8% 22% 8%;
      }

      .prisma-shards span {
        position: absolute;
        width: 42px;
        height: 42px;
        background: linear-gradient(160deg, rgba(255, 255, 255, 0.48), rgba(130, 228, 255, 0.12));
        clip-path: polygon(50% 0, 100% 38%, 74% 100%, 24% 100%, 0 38%);
        opacity: 0.42;
        filter: blur(0.2px);
        animation: prismaShard 6s ease-in-out infinite;
      }

      .prisma-shards span:nth-child(1) { top: 18%; left: 20%; animation-delay: -0.7s; }
      .prisma-shards span:nth-child(2) { top: 56%; left: 62%; animation-delay: -2.2s; }
      .prisma-shards span:nth-child(3) { top: 28%; left: 72%; animation-delay: -3.5s; }

      .prisma-portal:hover .prisma-beams {
        animation: prismaSplit 1.2s linear infinite;
      }

      .prisma-portal:hover .prisma-shards span {
        opacity: 0.75;
        animation-duration: 2.4s;
      }

      .nexus-portal {
        view-transition-name: nexus-card;
        --portal-accent: rgba(112, 213, 255, 0.95);
        --portal-glow: rgba(65, 193, 255, 0.28);
        --portal-cta-text: #e4f7ff;
        --portal-cta-border: rgba(122, 221, 255, 0.42);
        --portal-cta-bg: linear-gradient(120deg, rgba(81, 195, 255, 0.26), rgba(255, 255, 255, 0.08));
        background:
          radial-gradient(120% 80% at 50% 120%, rgba(118, 202, 255, 0.18), transparent 65%),
          linear-gradient(130deg, rgba(8, 21, 58, 0.92), rgba(7, 45, 94, 0.78) 52%, rgba(6, 18, 48, 0.88));
      }

      .nexus-portal .portal-title {
        background: linear-gradient(90deg, #f6fbff, #72d0ff 62%, #ffffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .nexus-grid {
        position: absolute;
        inset: 42% 8% 12% 8%;
        background:
          linear-gradient(rgba(116, 205, 255, 0.26) 1px, transparent 1px),
          linear-gradient(90deg, rgba(116, 205, 255, 0.26) 1px, transparent 1px);
        background-size: 24px 24px;
        transform: perspective(520px) rotateX(64deg);
        opacity: 0.62;
      }

      .nexus-nodes {
        position: absolute;
        inset: 48% 8% 12% 8%;
      }

      .nexus-nodes span {
        position: absolute;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #dff5ff;
        box-shadow: 0 0 12px rgba(131, 221, 255, 0.95);
        animation: nexusNode 1.9s ease-in-out infinite;
      }

      .nexus-nodes span::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        height: 1.5px;
        width: 96px;
        transform-origin: left center;
        transform: rotate(var(--a, 0deg)) scaleX(0);
        background: linear-gradient(90deg, rgba(203, 244, 255, 0.9), rgba(116, 205, 255, 0));
        animation: nexusLink 1.9s ease-in-out infinite;
      }

      .nexus-nodes span:nth-child(1) { top: 6%; left: 12%; --a: 18deg; animation-delay: -0.2s; }
      .nexus-nodes span:nth-child(2) { top: 28%; left: 46%; --a: -16deg; animation-delay: -0.8s; }
      .nexus-nodes span:nth-child(3) { top: 48%; left: 76%; --a: 24deg; animation-delay: -1.2s; }
      .nexus-nodes span:nth-child(4) { top: 68%; left: 28%; --a: -22deg; animation-delay: -1.6s; }

      .nexus-portal:hover .nexus-grid {
        animation: nexusRush 0.8s linear infinite;
        opacity: 0.72;
      }

      .nexus-portal:hover .nexus-nodes span,
      .nexus-portal:hover .nexus-nodes span::after {
        animation-duration: 0.65s;
      }

      @keyframes ringPulse {
        0% {
          transform: scale(0.2);
          opacity: 0;
        }

        25% {
          opacity: 0.75;
        }

        60% {
          opacity: 0.36;
        }

        100% {
          transform: scale(1.32);
          opacity: 0;
        }
      }

      @keyframes barDance {
        0%,
        100% {
          transform: scaleY(0.18);
          filter: saturate(0.95);
        }

        35% {
          transform: scaleY(1);
          filter: saturate(1.4);
        }

        70% {
          transform: scaleY(0.42);
          filter: saturate(1);
        }
      }

      @keyframes sonicSweep {
        0%,
        100% {
          transform: scaleX(0.62) translateX(0);
          opacity: 0.45;
        }

        50% {
          transform: scaleX(1.03) translateX(3px);
          opacity: 0.95;
        }
      }

      @keyframes visionTunnel {
        0% {
          transform: scale(0.28);
          opacity: 0;
        }

        20% {
          opacity: 0.88;
        }

        100% {
          transform: scale(1.4);
          opacity: 0;
        }
      }

      @keyframes visionDrift {
        from {
          background-position: 0 0;
        }

        to {
          background-position: 62px 0;
        }
      }

      @keyframes prismaSplit {
        0% {
          transform: translateX(-8%) rotate(-3deg) scale(1);
          filter: blur(0px);
        }

        50% {
          transform: translateX(2%) rotate(-1deg) scale(1.04);
          filter: blur(0.8px);
        }

        100% {
          transform: translateX(-8%) rotate(-3deg) scale(1);
          filter: blur(0px);
        }
      }

      @keyframes prismaShard {
        0%,
        100% {
          transform: translate3d(0, 0, 0) rotate(0deg) scale(0.88);
        }

        50% {
          transform: translate3d(8px, -10px, 0) rotate(30deg) scale(1.08);
        }
      }

      @keyframes nexusNode {
        0%,
        100% {
          transform: scale(0.85);
          opacity: 0.62;
        }

        50% {
          transform: scale(1.2);
          opacity: 1;
        }
      }

      @keyframes nexusLink {
        0%,
        100% {
          transform: rotate(var(--a, 0deg)) scaleX(0.06);
          opacity: 0.28;
        }

        45% {
          transform: rotate(var(--a, 0deg)) scaleX(1);
          opacity: 1;
        }
      }

      @keyframes nexusRush {
        from {
          background-position: 0 0, 0 0;
        }

        to {
          background-position: 0 26px, 26px 0;
        }
      }

      @keyframes nebulaShift {
        0% {
          transform: translate3d(-2%, -2%, 0) scale(1);
        }

        100% {
          transform: translate3d(3%, 2%, 0) scale(1.08);
        }
      }

      @keyframes starDrift {
        from {
          transform: translateY(0);
        }

        to {
          transform: translateY(-26px);
        }
      }

      @keyframes cardFlux {
        from {
          transform: translateX(-20%) rotate(12deg);
          opacity: 0;
        }

        30%,
        70% {
          opacity: 1;
        }

        to {
          transform: translateX(65%) rotate(12deg);
          opacity: 0;
        }
      }

      @keyframes lineFlow {
        0% {
          transform: rotate(var(--tilt)) translateX(calc(var(--amp-x) * -0.45)) translateY(calc(var(--amp-y) * -0.25)) scaleX(0.98);
        }

        28% {
          transform: rotate(calc(var(--tilt) * 0.45)) translateX(var(--amp-x)) translateY(calc(var(--amp-y) * 0.55)) scaleX(1.08);
        }

        57% {
          transform: rotate(calc(var(--tilt) * 1.15)) translateX(calc(var(--amp-x) * -0.2)) translateY(var(--amp-y)) scaleX(1.03);
        }

        100% {
          transform: rotate(calc(var(--tilt) * 0.3)) translateX(calc(var(--amp-x) * 1.1)) translateY(calc(var(--amp-y) * 0.1)) scaleX(1.09);
        }
      }

      @keyframes lineTwist {
        0% {
          border-radius: 999px;
        }

        35% {
          border-radius: 72% 28% 64% 36% / 44% 58% 42% 56%;
        }

        67% {
          border-radius: 34% 66% 38% 62% / 56% 40% 60% 44%;
        }

        100% {
          border-radius: 999px;
        }
      }

      @keyframes lineOpacity {
        0% {
          opacity: 0.72;
        }

        24% {
          opacity: 0.9;
        }

        55% {
          opacity: 0.76;
        }

        79% {
          opacity: 0.88;
        }

        100% {
          opacity: 0.74;
        }
      }

      @media (max-width: 720px) {
        .portal-grid {
          grid-template-columns: 1fr;
          gap: 18px;
        }

        .portal-card,
        .product-showcase {
          aspect-ratio: auto;
          min-height: 300px;
          padding-bottom: 124px;
        }

        .side-waves-group {
          width: 52vw;
          opacity: 0.56;
        }

        .flow-line {
          height: 6px;
        }

        .brand-signature {
          gap: 9px;
          margin-top: -18px;
          padding: 8px 12px;
        }

        .logo {
          letter-spacing: 6px;
          font-size: clamp(1.55rem, 7vw, 2.1rem);
        }

        .product-showcase {
          padding: 28px;
        }

        .product-heading {
          align-items: flex-start;
        }

        .subtitle {
          font-size: 1rem;
        }

        .audio-wave-deco {
          position: relative;
          right: auto;
          bottom: auto;
          margin-top: 28px;
          width: min(100%, 320px);
          margin-inline: auto;
          z-index: 0;
        }
      }

      @media (max-width: 1260px) {
        .portal-grid {
          max-width: 1040px;
          grid-template-columns: 1fr;
          gap: 22px;
        }

        .portal-card,
        .product-showcase {
          aspect-ratio: 16 / 10;
          padding-bottom: 136px;
        }
      }
    </style>
  </head>
  <body>
    <div class="side-waves" aria-hidden="true">
      <div class="side-waves-group left">
        <span class="flow-line"></span>
        <span class="flow-line"></span>
        <span class="flow-line"></span>
        <span class="flow-line"></span>
      </div>
      <div class="side-waves-group right">
        <span class="flow-line"></span>
        <span class="flow-line"></span>
        <span class="flow-line"></span>
        <span class="flow-line"></span>
      </div>
    </div>
    <header>
      <section class="hero-brand">
        <div class="hero-brand-bg liquid-glass" aria-hidden="true"></div>
        <div class="hero-brand-content">
          <div class="brand-signature liquid-glass">
            <img src={hubLogo.src} alt="Logo QUONIAM" class="logo-mark" loading="eager" />
