      <section class="portal-grid" aria-label="Modules QUONIAM">
        <a class="product-link" href="/quoniam-audio" aria-label="Entrer dans la dimension Quoniam Audio" data-astro-prefetch="hover">
          <section class="product-showcase liquid-glass">
          <div class="product-heading">
            <img src={audioIcon.src} alt="Icône Quoniam Audio" class="audio-icon" loading="lazy" />
            <h1>Quoniam Audio</h1>
          </div>
