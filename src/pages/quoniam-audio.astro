    <style>
      :root {
        --ink: #0c0817;
        --deep: #150d2f;
        --midnight: #0e2342;
        --gold: #d4af37;
        --gold-soft: #f2d078;
        --amber: #ffb347;
        --champagne: #ffe9be;
        --text: #fff6e7;
        --glass-bg: linear-gradient(150deg, rgba(255, 255, 255, 0.18), rgba(255, 255, 255, 0.03) 45%, rgba(255, 255, 255, 0.01));
        --glass-edge: rgba(255, 216, 146, 0.34);
        --glass-shadow: 0 24px 52px rgba(0, 0, 0, 0.52), 0 0 82px rgba(255, 169, 59, 0.22);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        color: var(--text);
        font-family: 'Segoe UI', system-ui, sans-serif;
        background: radial-gradient(circle at 50% 12%, #2f1a57 0%, #130e2f 40%, #090710 78%, #05040a 100%);
        min-height: 100vh;
        overflow-x: hidden;
      }

      .liquid-glass {
        position: relative;
        background: var(--glass-bg);
        border: 1px solid var(--glass-edge);
        box-shadow: var(--glass-shadow);
        backdrop-filter: blur(16px) saturate(120%);
        -webkit-backdrop-filter: blur(16px) saturate(120%);
        overflow: hidden;
      }

      .liquid-glass::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(100deg, rgba(255, 255, 255, 0.23), rgba(255, 255, 255, 0));
        opacity: 0.4;
        pointer-events: none;
      }

      .liquid-glass::after {
        content: "";
        position: absolute;
        inset: 1px;
        border-radius: inherit;
        border: 1px solid rgba(255, 255, 255, 0.15);
        pointer-events: none;
      }

      :root {
        view-transition-name: root;
      }

      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 620ms;
        animation-timing-function: cubic-bezier(0.2, 0.86, 0.22, 1);
      }

      ::view-transition-new(root) {
        animation-name: audioReveal;
      }

      .dimension {
        position: relative;
        min-height: 100vh;
        padding: 24px;
        isolation: isolate;
      }

      .dimension::before,
      .dimension::after {
        content: "";
        position: fixed;
        inset: -20%;
        pointer-events: none;
        z-index: -2;
      }

      .dimension::before {
        background:
          radial-gradient(32rem 24rem at 20% 20%, rgba(255, 179, 71, 0.22), transparent 70%),
          radial-gradient(34rem 30rem at 76% 64%, rgba(212, 175, 55, 0.26), transparent 72%),
          conic-gradient(from 0deg at 50% 50%, rgba(255, 175, 64, 0.08), rgba(84, 44, 160, 0.16), rgba(255, 175, 64, 0.08));
        filter: blur(12px);
        animation: auraSpin 16s linear infinite;
      }

      .dimension::after {
        background:
          radial-gradient(2px 2px at 16% 12%, rgba(255, 255, 255, 0.8), transparent),
          radial-gradient(2px 2px at 84% 26%, rgba(255, 228, 164, 0.95), transparent),
          radial-gradient(1px 1px at 36% 74%, rgba(255, 179, 71, 0.95), transparent),
          radial-gradient(2px 2px at 74% 84%, rgba(212, 175, 55, 0.9), transparent),
          linear-gradient(rgba(255, 204, 112, 0.05) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 179, 71, 0.05) 1px, transparent 1px);
        background-size: auto, auto, auto, auto, 44px 44px, 44px 44px;
        animation: starFlow 24s linear infinite;
        opacity: 0.76;
      }

      .hero {
        position: relative;
        max-width: 1140px;
        margin: 18px auto 24px;
        border-radius: 26px;
        padding: clamp(24px, 3.5vw, 42px);
        border: 1px solid rgba(255, 214, 138, 0.3);
        background:
          linear-gradient(145deg, rgba(255, 255, 255, 0.14), rgba(255, 255, 255, 0.02) 60%),
          linear-gradient(120deg, rgba(14, 10, 26, 0.8), rgba(20, 14, 46, 0.62));
        backdrop-filter: blur(14px);
        box-shadow:
          0 24px 52px rgba(0, 0, 0, 0.58),
          0 0 84px rgba(255, 168, 58, 0.2),
          inset 0 0 24px rgba(255, 226, 162, 0.08);
        overflow: hidden;
        isolation: isolate;
        view-transition-name: audio-card;
      }

      .top-brand {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
        margin-bottom: 18px;
      }

      .brand-id {
        display: inline-flex;
        align-items: center;
        gap: 10px;
      }

      .brand-id img {
        width: clamp(34px, 4vw, 48px);
        height: auto;
      }

      .brand-name {
        letter-spacing: 0.16em;
        font-size: 0.86rem;
        color: #ffe4ae;
        text-transform: uppercase;
      }

      .hero-home {
        color: #ffe4b0;
        text-decoration: none;
        font-size: 0.9rem;
      }

      .hero-home:hover {
        text-decoration: underline;
      }

      .hero::before {
        content: "";
        position: absolute;
        inset: -120% -20% auto;
        height: 240%;
        transform: rotate(15deg);
        background: linear-gradient(90deg, transparent 34%, rgba(255, 194, 101, 0.38) 50%, transparent 70%);
        animation: luxurySweep 8s linear infinite;
        pointer-events: none;
      }

      .hero-grid {
        display: grid;
        grid-template-columns: 1.2fr 0.95fr;
        gap: 24px;
        align-items: center;
      }

      .kicker {
        display: inline-block;
        color: var(--champagne);
        font-size: 0.78rem;
        letter-spacing: 0.22em;
        text-transform: uppercase;
        margin-bottom: 10px;
      }

      h1 {
        margin: 0;
        line-height: 1.05;
        font-size: clamp(2rem, 5.8vw, 4.4rem);
        background: linear-gradient(96deg, #fff2d1, #f6c55d 35%, #ffb347 58%, #ffe9be 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 24px rgba(255, 184, 72, 0.3);
        view-transition-name: audio-title;
      }

      .title-wrap {
        display: inline-flex;
        align-items: center;
        gap: 14px;
      }

      .audio-emblem {
        width: clamp(42px, 4.4vw, 56px);
        height: auto;
        filter: drop-shadow(0 0 12px rgba(255, 188, 93, 0.42));
        view-transition-name: audio-emblem;
      }

      .lead {
        margin: 14px 0 18px;
        color: #f6ead7;
        max-width: 62ch;
        line-height: 1.65;
        font-size: 1.08rem;
      }

      .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .chip {
        border-radius: 999px;
        padding: 8px 14px;
        font-size: 0.88rem;
        border: 1px solid rgba(255, 214, 133, 0.42);
        background: linear-gradient(130deg, rgba(255, 196, 98, 0.2), rgba(255, 255, 255, 0.08));
        color: #ffe8bc;
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.24), 0 8px 16px rgba(0, 0, 0, 0.26);
      }

      .portal {
        position: relative;
        width: min(100%, 420px);
        aspect-ratio: 1;
        margin-inline: auto;
      }

      .vortex {
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background:
          radial-gradient(circle, rgba(7, 5, 14, 0) 22%, rgba(10, 8, 19, 0.9) 44%, rgba(10, 8, 19, 1) 66%),
          conic-gradient(from 0deg, rgba(255, 179, 71, 0.94), rgba(212, 175, 55, 0.86), rgba(161, 92, 255, 0.72), rgba(255, 179, 71, 0.94));
        box-shadow:
          0 0 34px rgba(255, 185, 86, 0.62),
          0 0 92px rgba(212, 175, 55, 0.35);
        animation: vortexSpin 4.8s linear infinite;
      }

      .vortex::before,
      .vortex::after {
        content: "";
        position: absolute;
        border-radius: 50%;
      }

      .vortex::before {
        inset: 13%;
        border: 1px solid rgba(255, 212, 129, 0.5);
        animation: sonicRing 2.2s ease-out infinite;
      }

      .vortex::after {
        inset: 24%;
        background: radial-gradient(circle, rgba(255, 197, 82, 0.95), rgba(255, 179, 71, 0) 72%);
        filter: blur(9px);
        animation: corePulse 1.2s ease-in-out infinite;
      }

      .audio-crown {
        position: absolute;
        inset: 8%;
        border-radius: 50%;
        view-transition-name: audio-wave;
      }

      .audio-crown span {
        position: absolute;
        left: 50%;
        top: 50%;
        width: 8px;
        height: 28%;
        border-radius: 999px;
        transform-origin: 50% 100%;
        background: linear-gradient(180deg, #fff3d2, rgba(255, 179, 71, 0.25));
        box-shadow: 0 0 14px rgba(255, 187, 74, 0.52);
        transform:
          translate(-50%, -100%)
          rotate(calc(var(--r) * 15deg))
          translateY(-125%)
          scaleY(0.24);
        animation: radialBeat 1.2s ease-in-out infinite;
        animation-delay: calc(var(--r) * -0.045s);
      }

      .content {
        max-width: 1140px;
        margin: 0 auto 56px;
        display: grid;
        gap: 16px;
      }

      .card {
        border-radius: 20px;
        padding: 22px;
        border: 1px solid rgba(255, 213, 131, 0.25);
        background:
          linear-gradient(155deg, rgba(255, 255, 255, 0.09), rgba(255, 255, 255, 0.01) 60%),
          linear-gradient(120deg, rgba(11, 9, 20, 0.72), rgba(19, 16, 40, 0.58));
        backdrop-filter: blur(12px);
      }

      .hero > *,
      .card > * {
        position: relative;
        z-index: 1;
      }

      .card h2 {
        margin: 0 0 12px;
        color: #ffe2a5;
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .icon-chip {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        background:
