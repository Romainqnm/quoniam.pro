        white-space: pre-wrap;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', monospace;
        color: #ffe7b6;
        background: rgba(4, 3, 9, 0.58);
        border: 1px solid rgba(255, 207, 114, 0.22);
        border-radius: 12px;
        padding: 14px;
        line-height: 1.55;
      }

      .actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border-radius: 999px;
        padding: 10px 16px;
        font-weight: 600;
        border: 1px solid rgba(255, 213, 133, 0.42);
        backdrop-filter: blur(12px);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.24), 0 10px 20px rgba(0, 0, 0, 0.3);
      }

      .button.primary {
        color: #2b1200;
        background: linear-gradient(92deg, #ffe2ab, #ffb347);
      }

      .button.secondary {
        color: #ffe7bf;
        background: linear-gradient(120deg, rgba(255, 187, 75, 0.22), rgba(255, 255, 255, 0.07));
      }

      @keyframes auraSpin {
        from {
          transform: rotate(0deg) scale(1.04);
        }

        to {
          transform: rotate(360deg) scale(1.12);
        }
      }

      @keyframes starFlow {
        from {
          transform: translateY(0);
        }

        to {
          transform: translateY(-34px);
        }
      }

      @keyframes luxurySweep {
        from {
          transform: translateX(-25%) rotate(15deg);
          opacity: 0;
        }

        35%,
        65% {
          opacity: 1;
        }

        to {
          transform: translateX(75%) rotate(15deg);
          opacity: 0;
        }
      }

      @keyframes vortexSpin {
        from {
          transform: rotate(0deg);
        }

        to {
          transform: rotate(360deg);
        }
      }

      @keyframes sonicRing {
        0% {
          transform: scale(0.42);
          opacity: 0;
        }

        28% {
          opacity: 0.82;
        }

        100% {
          transform: scale(1.14);
          opacity: 0;
        }
      }

      @keyframes radialBeat {
        0%,
        100% {
          transform:
            translate(-50%, -100%)
            rotate(calc(var(--r) * 15deg))
            translateY(-125%)
            scaleY(0.18);
        }

        36% {
          transform:
            translate(-50%, -100%)
            rotate(calc(var(--r) * 15deg))
            translateY(-125%)
            scaleY(1);
        }

        72% {
          transform:
            translate(-50%, -100%)
            rotate(calc(var(--r) * 15deg))
            translateY(-125%)
            scaleY(0.42);
        }
      }

      @keyframes corePulse {
        0%,
        100% {
          opacity: 0.4;
          transform: scale(0.86);
        }

        50% {
          opacity: 1;
          transform: scale(1.1);
        }
      }

      @keyframes audioReveal {
        0% {
          filter: saturate(1.35) contrast(1.14);
          box-shadow: inset 0 0 200px rgba(255, 187, 74, 0.26);
        }

        100% {
          filter: none;
          box-shadow: inset 0 0 0 rgba(255, 187, 74, 0);
        }
      }

      @media (max-width: 920px) {
        .hero-grid,
        .grid-2 {
          grid-template-columns: 1fr;
        }

        .portal {
          width: min(88vw, 440px);
        }

        .audio-crown span {
          width: 7px;
        }

        .top-brand {
          flex-wrap: wrap;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>
