          0 0 16px rgba(255, 178, 71, 0.26);
        backdrop-filter: blur(8px) saturate(120%);
        -webkit-backdrop-filter: blur(8px) saturate(120%);
      }

      .icon-chip svg {
        width: 18px;
        height: 18px;
        stroke: #fff2d2;
        fill: none;
        stroke-width: 1.8;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 0 5px rgba(255, 194, 87, 0.42));
